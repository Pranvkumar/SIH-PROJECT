rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reports - temporary open access for debugging
    match /reports/{reportId} {
      allow read, write: if true;
    }
    
    // Alerts - temporary open access for debugging
    match /alerts/{alertId} {
      allow read, write: if true;
    }
    
    // Emergency alerts - can be created by anyone, read by anyone (temporary for testing)
    match /emergencyAlerts/{alertId} {
      allow read, write: if true;
    }
    
    // Notifications - can be created by system, read by target users (temporary open access)
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
